<a href="{{ post.link }}" class="tease tease-{{ post.post_type }} {{ cssClasses|default('') }}">
    <div class="tease__image-wrapper tease-{{ post.post_type }}__image-wrapper">
        <img src="{{ post.thumbnail('placeholder_image').src|resize(600, 350, 'center') }}" alt="{{ post.thumbnail('placeholder_image').alt }}" title="{{ post.post_type }}__image" />
    </div>

    <div class="tease__content-wrapper tease-{{ post.post_type }}__content-wrapper">
        <p class="bold tease__title tease-{{ post.post_type }}__title">{{ post.title }}</p>
    </div>
</a>
