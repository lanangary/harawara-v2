{% extends 'base.twig' %}

{% block main %}
	<div class="subscriber-dashboard-section">
		<div class="container">
			<div class="row">
				<div class="col-md-12">
					<div class="subscriber-dashboard-content">
						{{ dashboard_content|raw }}

						<div class="subscriber-actions">
							<h3>Quick Actions</h3>
							<div class="row">
								<div class="col-md-3">
									<div class="action-card">
										<h4>Update Profile</h4>
										<p>Update your personal information and preferences</p>
										<a href="{{ site.url }}/wp-admin/profile.php" class="btn btn-primary">Edit Profile</a>
									</div>
								</div>
								<div class="col-md-3">
									<div class="action-card">
										<h4>Edit Your Page</h4>
										<p>Customize your personal page content</p>
										<a href="/template-editor/" class="btn btn-success">Edit Your Page</a>
									</div>
								</div>
								<div class="col-md-3">
									<div class="action-card">
										<h4>View Your Page</h4>
										<p>See your public page as others see it</p>
										<a href="{{ subscriber_page_url }}" class="btn btn-info" target="_blank">View Your Page</a>
									</div>
								</div>
								<div class="col-md-3">
									<div class="action-card">
										<h4>View Orders</h4>
										<p>Check your order history and status</p>
										<a href="#" class="btn btn-secondary">View Orders</a>
									</div>
								</div>
								<div class="col-md-3">
									<div class="action-card">
										<h4>Contact Support</h4>
										<p>Get help from our customer support team</p>
										<a href="{{ site.url }}/contact" class="btn btn-outline-primary">Contact Us</a>
									</div>
								</div>
							</div>
						</div>

						<div class="subscriber-recent-activity">
							<h3>Recent Activity</h3>
							<div class="activity-list">
								<div class="activity-item">
									<span class="activity-date">{{ "now"|date("M j, Y") }}</span>
									<span class="activity-text">Welcome to your subscriber dashboard!</span>
								</div>
								<!-- Add more activity items here -->
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
{% endblock %}

