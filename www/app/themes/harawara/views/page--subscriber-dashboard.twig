{% block afterMain %}
	<style>
		/* Modern Harawara-inspired Dashboard Design */
		.subscriber-dashboard-section {
			min-height: 100vh;
			background: linear-gradient(135deg, #f8f9ff 0%, #ffffff 100%);
			padding: 40px 0 80px;
			font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, sans-serif;
		}

		/* Hero Section */
		.dashboard-hero {
			text-align: center;
			margin-bottom: 48px;
			padding: 48px 20px;
		}

		.dashboard-hero h1 {
			color: #1a1a1a;
			font-size: 3rem;
			font-weight: 700;
			letter-spacing: -0.02em;
			margin-bottom: 12px;
			background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
			-webkit-background-clip: text;
			-webkit-text-fill-color: transparent;
			background-clip: text;
		}

		.hero-subtitle {
			color: #64748b;
			font-size: 1.25rem;
			font-weight: 400;
			margin: 0;
			max-width: 600px;
			margin: 0 auto;
		}

		/* Dashboard Grid Layout */
		.dashboard-grid {
			display: grid;
			grid-template-columns: 1fr;
			gap: 32px;
			max-width: 1200px;
			margin: 0 auto;
		}

		/* Dashboard Cards */
		.dashboard-card {
			background: #ffffff;
			border-radius: 24px;
			box-shadow: 0 20px 60px rgba(0, 0, 0, 0.08);
			border: 1px solid rgba(255, 255, 255, 0.8);
			backdrop-filter: blur(10px);
			overflow: hidden;
			transition: all 0.3s ease;
		}

		.dashboard-card:hover {
			transform: translateY(-4px);
			box-shadow: 0 32px 80px rgba(0, 0, 0, 0.12);
		}

		.featured-card {
			background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
			color: white;
		}

		.featured-card .card-header h3,
		.featured-card .card-header p {
			color: white;
		}

		.card-header {
			padding: 32px 32px 24px;
			border-bottom: 1px solid #e2e8f0;
		}

		.featured-card .card-header {
			border-bottom: 1px solid rgba(255, 255, 255, 0.2);
		}

		.card-header h3 {
			color: #1e293b;
			font-size: 1.5rem;
			font-weight: 600;
			margin: 0 0 8px 0;
		}

		.card-header p {
			color: #64748b;
			margin: 0;
			font-size: 1rem;
		}

		.card-content {
			padding: 32px;
		}

		.featured-card .card-content {
			padding: 24px 32px 32px;
		}

		/* Status Indicator */
		.page-status {
			margin-bottom: 24px;
		}

		.status-indicator {
			display: flex;
			align-items: center;
			gap: 12px;
			padding: 12px 20px;
			background: rgba(255, 255, 255, 0.2);
			border-radius: 12px;
			backdrop-filter: blur(10px);
		}

		.status-dot {
			width: 12px;
			height: 12px;
			border-radius: 50%;
			background: #10b981;
			animation: pulse 2s infinite;
		}

		@keyframes pulse {
			0%, 100% { opacity: 1; }
			50% { opacity: 0.5; }
		}

		.status-text {
			color: white;
			font-weight: 500;
		}

		/* Primary Actions */
		.primary-actions {
			display: flex;
			gap: 16px;
			flex-wrap: wrap;
		}

		/* Action Cards Grid */
		.actions-grid {
			display: grid;
			grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
			gap: 24px;
		}

		.action-card {
			background: #ffffff;
			border-radius: 20px;
			padding: 32px 24px;
			text-align: center;
			border: 2px solid #f1f5f9;
			transition: all 0.3s ease;
			position: relative;
			overflow: hidden;
		}

		.action-card:hover {
			transform: translateY(-8px);
			border-color: #e2e8f0;
			box-shadow: 0 20px 40px rgba(0, 0, 0, 0.1);
		}

		.action-card:before {
			content: '';
			position: absolute;
			top: 0;
			left: 0;
			right: 0;
			height: 4px;
			background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
			transform: scaleX(0);
			transition: transform 0.3s ease;
		}

		.action-card:hover:before {
			transform: scaleX(1);
		}

		.action-icon {
			font-size: 2.5rem;
			margin-bottom: 16px;
			display: block;
		}

		.action-card h4 {
			color: #1e293b;
			font-size: 1.25rem;
			font-weight: 600;
			margin: 0 0 12px 0;
		}

		.action-card p {
			color: #64748b;
			margin: 0 0 24px 0;
			line-height: 1.5;
		}

		/* Buttons */
		.btn {
			display: inline-flex;
			align-items: center;
			gap: 8px;
			padding: 12px 24px;
			border-radius: 12px;
			font-weight: 600;
			font-size: 0.95rem;
			text-decoration: none;
			border: none;
			cursor: pointer;
			transition: all 0.3s ease;
			white-space: nowrap;
		}

		.btn-primary {
			background: linear-gradient(135deg, #10b981 0%, #059669 100%);
			color: white;
			box-shadow: 0 4px 16px rgba(16, 185, 129, 0.3);
		}

		.btn-primary:hover {
			transform: translateY(-2px);
			box-shadow: 0 8px 24px rgba(16, 185, 129, 0.4);
			color: white;
			text-decoration: none;
		}

		.btn-secondary {
			background: rgba(255, 255, 255, 0.2);
			color: white;
			border: 2px solid rgba(255, 255, 255, 0.3);
		}

		.btn-secondary:hover {
			background: rgba(255, 255, 255, 0.3);
			color: white;
			text-decoration: none;
		}

		.btn-outline {
			background: #ffffff;
			color: #64748b;
			border: 2px solid #e2e8f0;
		}

		.btn-outline:hover {
			background: #f8fafc;
			border-color: #cbd5e1;
			color: #374151;
			text-decoration: none;
			transform: translateY(-1px);
		}

		/* Activity List */
		.activity-list {
			space-y: 16px;
		}

		.activity-item {
			display: flex;
			align-items: flex-start;
			gap: 16px;
			padding: 20px;
			background: #f8fafc;
			border-radius: 12px;
			margin-bottom: 16px;
			transition: all 0.2s ease;
		}

		.activity-item:hover {
			background: #f1f5f9;
		}

		.activity-icon {
			font-size: 1.5rem;
			flex-shrink: 0;
		}

		.activity-content {
			flex: 1;
			display: flex;
			flex-direction: column;
			gap: 4px;
		}

		.activity-text {
			color: #374151;
			font-weight: 500;
			font-size: 0.95rem;
		}

		.activity-date {
			color: #64748b;
			font-size: 0.875rem;
		}

		/* Tips Section */
		.tips-card {
			background: linear-gradient(135deg, #fef3c7 0%, #fde68a 100%);
		}

		.tips-card .card-header {
			border-bottom: 1px solid rgba(217, 119, 6, 0.2);
		}

		.tips-card .card-header h3 {
			color: #92400e;
		}

		.tips-card .card-header p {
			color: #b45309;
		}

		.tips-list {
			space-y: 16px;
		}

		.tip-item {
			display: flex;
			align-items: center;
			gap: 12px;
			padding: 16px;
			background: rgba(255, 255, 255, 0.5);
			border-radius: 12px;
			margin-bottom: 12px;
		}

		.tip-icon {
			font-size: 1.25rem;
			flex-shrink: 0;
		}

		.tip-text {
			color: #92400e;
			font-weight: 500;
		}

		/* Responsive Design */
		@media (max-width: 768px) {
			.dashboard-hero h1 {
				font-size: 2.25rem;
			}

			.hero-subtitle {
				font-size: 1.125rem;
			}

			.dashboard-hero {
				padding: 32px 20px;
				margin-bottom: 32px;
			}

			.dashboard-grid {
				gap: 24px;
				margin: 0 16px;
			}

			.card-header,
			.card-content {
				padding: 24px 20px;
			}

			.featured-card .card-content {
				padding: 16px 20px 24px;
			}

			.actions-grid {
				grid-template-columns: 1fr;
				gap: 16px;
			}

			.action-card {
				padding: 24px 20px;
			}

			.primary-actions {
				flex-direction: column;
			}

			.btn {
				width: 100%;
				justify-content: center;
			}
		}

		/* Loading States */
		.btn:disabled {
			opacity: 0.6;
			cursor: not-allowed;
			transform: none !important;
		}

		/* Enhanced Focus States */
		*:focus {
			outline: none;
		}

		/* Smooth Animations */
		* {
			transition: all 0.2s ease;
		}
	</style>
{% endblock %}
