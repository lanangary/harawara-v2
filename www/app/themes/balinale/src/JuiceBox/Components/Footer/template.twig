<footer class="footer-base footer-base--0 padding-fluid">
    <div class="container">
        <div class="row">
            <div class="col xs-12 sm-2">
                <a href="tel:{{ options.phone|tel }}" class="large i-block underline footer-base__contact-link">{{ options.phone }}</a>
            </div>
            <div class="col xs-12 sm-4">
                <a href="mailto:{{ options.email }}" class="large i-block underline footer-base__contact-link">{{ options.email }}</a>
            </div>
            <div class="col xs-12 sm-6 footer-base__social_links">
                {% for item in options.social_links %}
                    <a href="{{ item.link }}" class="footer-base__social_link" target="_blank">
                        <span class="sr-only">{{ item.type.label }}</span>
                        {{ icon(item.type.value) }}
                    </a>
                {% endfor %}
            </div>
        </div>
    </div>
</footer>
<footer class="footer padding-fluid-xsmall">
    <div class="container">
        <div class="row">
            <div class="col xs-6 sm-2">
                <p class="small bold text-uppercase no-margin footer__copy">&copy; {{ "now"|date('Y') }} {{ site.name }}</p>
            </div>
            <nav class="col xs-12 sm-8 sm-2 footer__menu-wrapper" aria-label="Legal navigation">
                <ul class="footer__menu">
                    {% for item in theme_menus.legal_menu.items %}
                        <li class="footer__menu__li">
                            <a href="{{ item.link }}" class="small footer__menu__link">{{ item.title }}</a>
                        </li>
                    {% endfor %}
                </ul>
            </nav>
            <div class="col xs-6 sm-2 text-right">
                <p><a href="https://www.juicebox.com.au/" target="_blank" class="small bold text-uppercase footer__jb">A Juicebox Experience</a></p>
                <p><a href="#top">Back to top</a></p>
            </div>
        </div>
    </div>
</footer>
